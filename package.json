{
  "name": "etherscan-monitoring-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "author": "Nikita Eliseev <npeliseev@gmail.com>",
  "scripts": {
    "build": "tsc --build",
    "start": "npm run build && node dist/index.js",
    "dev": "nodemon --watch 'src/**/*' -e js,ts --exec 'ts-node' src/index.ts",
    "lint": "eslint --ext .ts,.js ./src",
    "lint:prettify": "npx prettier './src/**/*.{ts,js}' --write",
    "lint:fix": "eslint ./src --fix --ext .ts,.js"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "knex": "^2.4.0",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^9.1.0",
    "pg": "^8.3.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "devDependencies": {
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^14.0.20",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run lint:prettify",
      "npm run lint:fix"
    ]
  }
}
